/*Wepic version of fancybox for outer boxes*/
#wepicbox-loading {
  position: fixed;
  top: 50%;
  left: 50%;
  width: 40px;
  height: 40px;
  margin-top: -20px;
  margin-left: -20px;
  cursor: pointer;
  overflow: hidden;
  z-index: 1114;
  display: none;
}

#wepicbox-loading div {
  position: absolute;
  top: 0;
  left: 0;
  width: 40px;
  height: 480px;
  background-image: url(<%= asset_path 'fancybox.png' %>);
}

#wepicbox-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1110;
  display: none;
}

#wepicbox-tmp {
  padding: 0;
  margin: 0;
  border: 0;
  overflow: auto;
  display: none;
}

#wepicbox-wrap {
  position: absolute;
  top: 0;
  left: 0;
  padding: 20px;
  z-index: 1111;
  outline: none;
  display: none;
  /*background-color : #111;*/
  color : #111;
}

#wepicbox-outer {
  position: relative;
  width: 100%;
  height: 100%;
  /*background: #111;*/
}

#wepicbox-content {
  width: 0;
  height: 0;
  padding: 0;
  outline: none;
  position: relative;
  overflow: hidden;
  z-index: 1112;
  /*background-color : #111;*/
  border: 0px solid #111;
}

#wepicbox-hide-sel-frame {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  z-index: 1111;
}

#wepicbox-close {
  position: absolute;
  top: -15px;
  right: -15px;
  width: 30px;
  height: 30px;
  background: transparent url(<%= asset_path 'fancybox.png' %>) -40px 0px;
  cursor: pointer;
  z-index: 1113;
  display: none;
}

#wepicbox-error {
  color: #444;
  font: normal 12px/20px Arial;
  padding: 14px;
  margin: 0;
}

#wepicbox-img {
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  border: none;
  outline: none;
  line-height: 0;
  vertical-align: top;
}

#wepicbox-frame {
  width: 100%;
  height: 100%;
  border: none;
  display: block;
}

#wepicbox-left, #wepicbox-right {
  position: absolute;
  bottom: 0px;
  height: 100%;
  width: 35%;
  cursor: pointer;
  outline: none;
  background: transparent url(<%= asset_path 'blank.gif' %>);
  z-index: 1112;
  display: none;
}

#wepicbox-left {
  left: 0px;
}

#wepicbox-right {
  right: 0px;
}

#wepicbox-left-ico, #wepicbox-right-ico {
  position: absolute;
  top: 50%;
  left: -9999px;
  width: 30px;
  height: 30px;
  margin-top: -15px;
  cursor: pointer;
  z-index: 1112;
  display: block;
}

#wepicbox-left-ico {
  background-image: url(<%= asset_path 'fancybox.png' %>);
  background-position: -40px -30px;
}

#wepicbox-right-ico {
  background-image: url(<%= asset_path 'fancybox.png' %>);
  background-position: -40px -60px;
}

#wepicbox-left:hover, #wepicbox-right:hover {
  visibility: visible; /* IE6 */
}

#wepicbox-left:hover span {
  left: 20px;
}

#wepicbox-right:hover span {
  left: auto;
  right: 20px;
}

.wepicbox-bg {
  position: absolute;
  padding: 0;
  margin: 0;
  border: 0;
  width: 20px;
  height: 20px;
  z-index: 1111;
}

#wepicbox-bg-n {
  top: -20px;
  left: 0;
  width: 100%;
  background-image: url(<%= asset_path 'fancybox-x.png' %>);
}

#wepicbox-bg-ne {
  top: -20px;
  right: -20px;
  background-image: url(<%= asset_path 'fancybox.png' %>);
  background-position: -40px -162px;
}

#wepicbox-bg-e {
  top: 0;
  right: -20px;
  height: 100%;
  background-image: url(<%= asset_path 'fancybox-y.png' %>);
  background-position: -20px 0px;
}

#wepicbox-bg-se {
  bottom: -20px;
  right: -20px;
  background-image: url(<%= asset_path 'fancybox.png' %>);
  background-position: -40px -182px; 
}

#wepicbox-bg-s {
  bottom: -20px;
  left: 0;
  width: 100%;
  background-image: url(<%= asset_path 'fancybox-x.png' %>);
  background-position: 0px -20px;
}

#wepicbox-bg-sw {
  bottom: -20px;
  left: -20px;
  background-image: url(<%= asset_path 'fancybox.png' %>);
  background-position: -40px -142px;
}

#wepicbox-bg-w {
  top: 0;
  left: -20px;
  height: 100%;
  background-image: url(<%= asset_path 'fancybox-y.png' %>);
}

#wepicbox-bg-nw {
  top: -20px;
  left: -20px;
  background-image: url(<%= asset_path 'fancybox.png' %>);
  background-position: -40px -122px;
}

#wepicbox-title {
  font-family: Helvetica;
  font-size: 12px;
  z-index: 1202;
}

.wepicbox-title-inside {
  padding-bottom: 10px;
  text-align: center;
  color: #333;
  background: #fff;
  position: relative;
}

.wepicbox-title-outside {
  padding-top: 10px;
