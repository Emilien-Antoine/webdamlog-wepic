/*********************WEPIC***********************/
.actions {
	margin-top : 20px;
}

.download {
	background : #333;
	color : #eee;
	cursor : pointer;
}

.images.choose {
  margin-top: 20px;
  max-height: 225px;
  max-width: 640px;
  min-height: 220px;
  min-width: 422px;
  margin-bottom : 0px;
}

.images .choose {
	max-height : 350px;
	overflow : scroll;
}

#contacts {
	overflow-y : scroll;
	overflow-x : hidden;
	max-height : 250px;
	background-color : #fff;
	border : #111 1px solid;
}

.entry-select {
    height : 198px;
    position : relative;
    float : left;
    width : 198px;    
}

.entry-select > input {
  position: absolute;
  right: 0;
  top: 0;
}

.title-select {
  background-color: #222222;
  color: #EEEEEE;
  opacity: 0.8;
  position: absolute;
}

#image-title {
	background-color : #111;
	color : #eee;
	border : none;
	font-weight : bold;
	font-size : 14px;
}

#image-location { 
	background-color : #111;
	color : #eee;
	border : none;
	font-weight : bold;
	font-size : 14px;
}

#image-title:hover {
	border : 1px #eee solid;
}

#image-location:hover {
	border : 1px #eee solid; 
}

#fancybox-left, #fancybox-right {
	width : 15%;	
}

#fancybox-left:hover, #fancybox-right:hover {
	background-color : #222;
	opacity : 0.7;
	opacity:0.7;
	filter:alpha(opacity=77);
	width : 15%;	
}

#fancybox-close {
	z-index : 1120;
}

.fancybox-title-inside {
	min-width : 480px;
	margin-left : 0px;
	margin-right : 0px;
	background-color : #111;
	color : #eee;
	width : 100%;
}

#fancybox-content {
	border-color : #111;
	margin : 0 auto;
}

#fancybox-wrap {
	min-width : 500px;
}

#fancybox-outer {
	background-color : #111;
	min-width : 500px;
	width : 100%;
	z-index : 1100;
}

#my_pictures_button {
	padding : 10px 10px;
	width : 15px;
}

#contact_pictures_button {
	padding : 10px 10px;
	width : 15px;
}


#fancybox-title-inside > table {
  width: 100%;
}

#fancybox-content {
	overflow : visible;
}

#fancybox-title-inside td {
  text-align: left;
}

#fancybox-comment-wrapper {
   height:85%;
   width:100%;
   overflow-y:scroll;
   overflow-x:hidden;
   z-index:103;
}

.error {
  color : #F00; //Use color red for errors
}

#add-comment-box {
  width: 100%;
  height: 15%;
  overflow-y: scroll;
  overflow-x:hidden;
  border-top: solid 2px #888;
  z-index : 104;
}

#fancybox-comments{
   width: 300px;
   height: 100%;
   position: fixed;
   z-index: 102;
   background: url("/assets/blank.gif") repeat scroll 0 0 #FFFFFF;
   bottom: 0;
   cursor: pointer;
   display: inline;
   outline: medium none;
   right:0px;
}

.small-date {
  font-size: 8px;
  color: #333;
  float: right;
  width:100%;
  text-align: right;
  border-bottom: solid 1px #aaa;
  
}

.fancybox-comment {
  padding : 5px;  
}

.star-wrapper{
  float:right;
  padding: 2px;
  padding-right : 0px;
}

#fancybox-title-over td{
  width : 50%;
}

#fancybox-title-over table{
  width : 100%;
}

.images {
  overflow-y : scroll;
  overflow-x : hidden;
  border : 1px solid #333;
  margin-bottom : 20px;
  background-color: #eee;
  opacity : 80%;
  padding-left:2px;
  padding-top : 2px;
  min-width: 622px;
  max-height : 700px;
  width: 99%;
}

.entry {
    height : 198px;
    margin-top : 2px;
    margin-bottom : 2px;
    position : relative;
    float : left;
    margin-right : 2px;
    margin-left : 2px;
    width : 198px;    
}

.entry .title {
    display : none;
}

.entry .image {   
}

.images img {
    width : 198px;
    height : 198px;
}

#pictures {
    position : relative;
    float : left;
    width : 80%;
}

#contact_tab {
    position : relative;
    float : left;
    width : 19%;
    margin-left : 1%;
    height : 100%;
}

.contact{
  width : 85%;
  display:inline-block;
  color:#111;
  padding:6px 24px;
  text-decoration:none;
}
.contact:hover {
  background-color:#111;
  opacity : 0.9;
  color : #fff;
}
.selected:hover {
  background-color:#111;
  opacity : 0.9;
  color : #fff;
}
.contact:active {
  background-color:#111;
  color : #fff;	
}

.selected {
  width : 85%;
  display:inline-block;
  color:#fff;
  background-color : #111;
  padding:6px 24px;
  text-decoration:none;  
}

.online {
  background : url(/assets/online.png) center no-repeat #111;
  width : 15%;
}
.offline {
  background : url(/assets/offline.png) center no-repeat #111;
  width : 15%;
}

#contact {
  width : 80%;
  min-width : 180px;
}



//Starting buttons 
#contacts {
  margin: 0;
  padding: 0;
  z-index: 30;
  width : 80%;
}

#contacts table {
  margin: 0;
  padding: 0;
  z-index: 30;
  width : 80%;
}

#edit_picture {
	display:block;
	float:right;
	background-color : #222;
	border-radius : 2px;
    opacity:0.8;
    padding : 5px;
    color : #ddd;
    filter:alpha(opacity=80);
    top : 0px;
    right : 0px;
    z-index : 1119;
    position : absolute;
}