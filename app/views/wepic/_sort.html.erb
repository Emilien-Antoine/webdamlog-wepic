<%=form_tag({ :controller => "wepic", :action => "index"},:method => 'get') do%>
  <div class="field">
  	Sort By : <%=select_tag 'order' , options_for_select(@order_options.each_with_index {|o,i| [o,i]}) %>
  </div>
  <div class="field">
  	In order : <%=select_tag 'sort' , options_for_select(@sort_options.each_with_index {|o,i| [o,i]}) %>
  </div>  
  <div class="actions">
    <%= submit_tag 'Sort' %>
  </div>
<% end %>
