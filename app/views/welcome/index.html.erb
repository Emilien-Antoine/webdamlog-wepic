<script>
  $(function() {
    // Create a new client to connect to Faye
    var client = new Faye.Client(<%="http://localhost:#{port().to_i+2}/faye"%>);
    // Subscribe to the public channel
    var public_subscription = client.subscribe('/redirect', function(data) {
			if (typeof console !== 'undefined') {
				console.log(data);
			} else {
				$("#notice").append("<li>" + data + "</li>");
			}
    });
	});
</script>
<div id="notice"><%= notice %></div>
<div class="opacity"></div>
<div class="content">
	<div class="notice"><%= notice %></div>
	<div class="alert"><%= alert %></div>
	<div class="signin">
		<%= render 'login'%>
	</div>
	<div class="list" style="margin-top:30px;">
		<%= render 'list'%>
	</div>
	<div class="field">
		<%=form_tag({:controller => "welcome", :action=>"killall"},:method=>'post') do %>
			<%= submit_tag 'Kill all wepic peers'%>
		<%end%>
	</div>
</div>
